<head>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
    rel="stylesheet"
  />
  <style>
    body { font-family: 'Poppins', sans-serif; background-color: #f4f4f4; }
    .form-group label { font-weight: 600; color: #333; } .form-control {
    border-radius: 10px; padding: 10px; font-size: 16px; border: 2px solid #ccc;
    background-color: #ffffff; } .form-control:focus { border-color: #888;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); } .input-group-text {
    background-color: #f2f2f2; color: #333; border: none; border-radius: 10px 0
    0 10px; } .btn-success { background-color: #6c757d; border: none; color:
    white; padding: 12px; font-size: 18px; border-radius: 8px; transition:
    background-color 0.3s ease; } .btn-success:hover { background-color:
    #5a6268; } h1 { background-color: #f8f9fa; padding: 20px; text-align:
    center; color: #333; width: 100%; border-radius: 10px 10px 0 0; font-size:
    24px; }
  </style>
</head>

<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1>
    <i class="bi bi-person-plus-fill"></i>
    REGISTER FORM
  </h1>
  <form
    class="m-4 p-4 d-flex flex-column justify-content-evenly flex-wrap align-items-center"
    style="width: 380px; border-radius: 10px; background-color: #ffffff; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);"
  >
    <div class="form-group w-100">
      <label for="name">Nickname</label>
      <div class="input-group">
        <span class="input-group-text"><i
            class="bi bi-person-circle"
          ></i></span>
        <input
          class="form-control"
          type="text"
          name="name"
          id="name"
          placeholder="Enter your nickname"
        />
      </div>
    </div>
    <div class="form-group w-100">
      <label for="avatar">Avatar URL</label>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-image"></i></span>
        <input
          class="form-control"
          type="text"
          name="avatar"
          id="avatar"
          placeholder="Enter avatar URL"
        />
      </div>
    </div>
    <div class="form-group w-100">
      <label for="date">Date of Birth</label>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
        <input class="form-control" type="date" name="date" id="date" />
      </div>
    </div>
    <div class="form-group w-100">
      <label for="email">Email</label>
      <div class="input-group">
        <span class="input-group-text"><i
            class="bi bi-envelope-fill"
          ></i></span>
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          placeholder="Enter your email"
        />
      </div>
    </div>
    <div class="form-group w-100">
      <label for="password">Password</label>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          placeholder="Enter your password"
        />
      </div>
    </div>
    <input
      class="btn btn-success w-100 mt-3"
      type="button"
      id="register"
      value="REGISTER!"
    />
  </form>
</main>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"
></script>
<script src="/scripts/register.js"></script>